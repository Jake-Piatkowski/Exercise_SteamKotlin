<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jbpi.steamkotlin.HomeActivity"
    tools:ignore="HardcodedText">

    <TextView
        android:id="@+id/home_text_choose_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:text="Choose the game:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/home_button_game_killingfloor2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Killing Floor 2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_text_choose_game"/>

    <Button
        android:id="@+id/home_button_game_alienswarm"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Alien Swarm"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_button_game_killingfloor2"/>

</android.support.constraint.ConstraintLayout>
